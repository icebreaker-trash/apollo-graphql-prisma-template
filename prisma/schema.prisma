generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  articles Article[]
  comments Comment[]
}

model Article {
  id       Int       @id @default(autoincrement())
  title    String
  content  String
  user     User      @relation(fields: [userId], references: [id])
  userId   Int
  comments Comment[]
  topic    Topic? //  @relation(fields: [topicId], references: [id])
  tags     Tag[]
  // topicId  Int
}

model Topic {
  id        Int     @id @default(autoincrement())
  name      String
  article   Article @relation(fields: [articleId], references: [id])
  articleId Int     @unique
}

model Comment {
  id        Int     @id @default(autoincrement())
  content   String
  article   Article @relation(fields: [articleId], references: [id])
  articleId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}

model Tag {
  id       Int       @id @default(autoincrement())
  name     String
  articles Article[]
}
