{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "sourceMap": true
    },
    "esm": true
  },
  "include": ["src/**/*"]
}